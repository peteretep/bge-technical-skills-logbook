<div class="space-y-8">
  <div class="flex justify-between items-center">
    <h1 class="text-4xl font-bold text-gray-900">Your Classrooms</h1>
  </div>

  <% if @classrooms.empty? %>
    <div class="bg-white rounded-lg shadow-md p-8 text-center border border-gray-200">
      <p class="text-gray-600 text-lg mb-4">You don't have any classrooms yet.</p>
      <p class="text-gray-500">Create your first classroom below!</p>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @classrooms.each do |classroom| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 border border-gray-200">
        <h3 class="text-2xl font-semibold text-gray-900 mb-2"><%= classroom.full_name %></h3>
        <p class="text-gray-600 mb-4">
          <span class="font-medium"><%= classroom.students.count %></span>
          <%= 'student'.pluralize(classroom.students.count) %>
        </p>
        <%= link_to "View Details", classroom_path(classroom),
            class: "inline-block bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
      </div>
    <% end %>

    <!-- Create New Classroom Card -->
    <div class="bg-white rounded-lg shadow-md p-6 border-2 border-dashed border-gray-300 hover:border-primary transition-colors duration-200">
      <%= form_with model: @classroom, url: create_classroom_path, local: true, class: "h-full flex flex-col" do |form| %>
        <h3 class="text-2xl font-semibold text-gray-900 mb-4">+ New Classroom</h3>

        <% if @classroom.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-3 py-2 rounded-lg mb-4 text-sm">
            <p class="font-semibold mb-1">Errors:</p>
            <ul class="list-disc list-inside text-xs">
              <% @classroom.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-3 flex-1">
          <div>
            <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :name,
                required: true,
                placeholder: "e.g., 7A",
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :year_group, "Year Group", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :year_group,
                placeholder: "e.g., S2",
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
          </div>
        </div>

        <div class="mt-4">
          <%= form.submit "Create Classroom",
              class: "w-full bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-lg font-medium transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
