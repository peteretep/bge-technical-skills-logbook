<div class="space-y-8">
  <div class="flex justify-between items-center">
    <h1 class="text-4xl font-bold text-gray-900">Your Classrooms</h1>
  </div>

  <% if @classrooms.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @classrooms.each do |classroom| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 border border-gray-200">
          <h3 class="text-2xl font-semibold text-gray-900 mb-2"><%= classroom.full_name %></h3>
          <p class="text-gray-600 mb-4">
            <span class="font-medium"><%= classroom.students.count %></span> 
            <%= 'student'.pluralize(classroom.students.count) %>
          </p>
          <%= link_to "View Details", classroom_path(classroom), 
              class: "inline-block bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-8 text-center border border-gray-200">
      <p class="text-gray-600 text-lg mb-4">You don't have any classrooms yet.</p>
      <p class="text-gray-500">Create your first classroom below!</p>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">Create New Classroom</h2>

    <%= form_with model: @classroom, url: create_classroom_path, local: true, class: "space-y-4" do |form| %>
      <% if @classroom.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside">
            <% @classroom.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "Classroom Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            required: true,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :year_group, "Year Group", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :year_group, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div>
        <%= form.submit "Create Classroom", 
            class: "bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-semibold transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
