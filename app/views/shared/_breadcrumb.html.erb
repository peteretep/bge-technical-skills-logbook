<!-- app/views/shared/_breadcrumb.html.erb -->
<nav class="flex mb-6" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <!-- Dashboard Link -->
    <li class="inline-flex items-center">
      <%= link_to root_path, class: "text-gray-700 hover:text-primary inline-flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
        Dashboard
      <% end %>
    </li>

    <% if local_assigns[:classroom] %>
      <!-- Classroom Link -->
      <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          <%= link_to classroom.full_name, classroom_path(classroom), class: "text-gray-700 hover:text-primary ml-1 md:ml-2" %>
        </div>
      </li>
    <% end %>

    <% if local_assigns[:student] %>
      <!-- Student Link (final breadcrumb) -->
      <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          <span class="text-gray-500 font-medium ml-1 md:ml-2"><%= student.full_name %></span>
        </div>
      </li>
    <% end %>

    <% if local_assigns[:page_title] && !local_assigns[:student] %>
      <!-- Page Title (for other pages like Bulk Mark, Viable Badges) -->
      <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          <span class="text-gray-500 font-medium ml-1 md:ml-2"><%= page_title %></span>
        </div>
      </li>
    <% end %>
  </ol>
</nav>
