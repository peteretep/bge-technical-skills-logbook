<div class="space-y-6">
  <!-- Breadcrumb Navigation -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <%= link_to root_path, class: "text-gray-700 hover:text-primary" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
          Dashboard
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          <span class="text-gray-500 font-medium"><%= @classroom.full_name %></span>
        </div>
      </li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
    <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @classroom.full_name %></h1>
    <p class="text-gray-600">
      <span class="font-medium"><%= @students.count %></span> 
      <%= 'student'.pluralize(@students.count) %>
    </p>
  </div>

  <!-- Students Table -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-2xl font-semibold text-gray-900">Students</h2>
    </div>

    <% if @students.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">First Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @students.each do |student| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to student.first_name, student_path(student), 
                      class: "text-primary hover:text-primary/80 font-medium" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to student.last_name, student_path(student), 
                      class: "text-primary hover:text-primary/80 font-medium" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "View Skills", student_path(student), 
                      class: "text-primary hover:text-primary/80 font-medium" %>
                  <span class="text-gray-300">|</span>
                  <%= button_to "Delete", 
                      classroom_student_path(@classroom, student), 
                      method: :delete, 
                      data: { turbo_confirm: "Are you sure you want to delete #{student.full_name}?" },
                      class: "text-red-600 hover:text-red-800 font-medium" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center">
        <p class="text-gray-600">No students in this classroom yet. Add one below!</p>
      </div>
    <% end %>
  </div>

  <!-- Bulk Mark Skills -->
  <% if @students.any? %>
    <div data-controller="bulk-mark">
      <!-- Trigger Button -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 mb-6 flex justify-between items-center">
        <div>
          <h2 class="text-2xl font-semibold text-gray-900">Bulk Mark Skills</h2>
          <p class="text-gray-600 mt-1">Quickly mark skills as demonstrated for multiple students.</p>
        </div>
        <button data-action="click->bulk-mark#open" 
                class="bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-semibold transition-colors flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          Mark Skills
        </button>
      </div>

      <!-- Modal Backdrop -->
      <div data-bulk-mark-target="modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-action="click->bulk-mark#close"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto">
          <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            
            <!-- Modal Panel -->
            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-2xl">
              <%= form_with url: bulk_mark_skills_classroom_path(@classroom), method: :post, local: true do |form| %>
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                  <div class="sm:flex sm:items-start">
                    <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
                      <h3 class="text-xl font-semibold leading-6 text-gray-900 mb-4" id="modal-title">Mark Skills</h3>
                      
                      <!-- Skill Selection -->
                      <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Skill</label>
                        <select name="skill_id" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                          <option value="">-- Choose a skill --</option>
                          <% @sections.each do |section| %>
                            <optgroup label="<%= section.name %>">
                              <% section.skills.ordered.each do |skill| %>
                                <option value="<%= skill.id %>">
                                  <%= skill.level_icon %> <%= skill.level_name %>: <%= skill.description %>
                                </option>
                              <% end %>
                            </optgroup>
                          <% end %>
                        </select>
                      </div>

                      <!-- Student Selection -->
                      <div>
                        <div class="flex justify-between items-center mb-2">
                          <label class="block text-sm font-medium text-gray-700">Select Students</label>
                          <div class="flex items-center space-x-4">
                            <span data-bulk-mark-target="count" class="text-sm text-gray-500">0 students selected</span>
                            <button data-action="click->bulk-mark#toggleAll" class="text-sm text-primary hover:text-primary/80 font-medium">
                              Toggle All
                            </button>
                          </div>
                        </div>
                        
                        <div class="border border-gray-300 rounded-lg p-4 max-h-60 overflow-y-auto bg-gray-50">
                          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                            <% @students.each do |student| %>
                              <label class="flex items-center space-x-3 cursor-pointer hover:bg-white p-2 rounded transition-colors">
                                <%= check_box_tag "student_ids[]", student.id, false, 
                                    data: { bulk_mark_target: "checkbox", action: "change->bulk-mark#updateState" },
                                    class: "w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary" %>
                                <span class="text-gray-900 select-none"><%= student.full_name %></span>
                              </label>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 border-t border-gray-200">
                  <%= form.submit "Mark as Demonstrated", 
                      data: { bulk_mark_target: "submitButton" },
                      class: "inline-flex w-full justify-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary/90 sm:ml-3 sm:w-auto disabled:opacity-50 disabled:cursor-not-allowed" %>
                  <button type="button" data-action="click->bulk-mark#close" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancel</button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Add Student Form -->
  <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">Add New Student</h2>

    <%= form_with model: [@classroom, @student], local: true, class: "space-y-4" do |form| %>
      <% if @student.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside">
            <% @student.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :first_name, 
              required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
        </div>

        <div>
          <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :last_name, 
              required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
        </div>
      </div>

      <div>
        <%= form.submit "Add Student", 
            class: "bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-semibold transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function selectAllStudents() {
    document.querySelectorAll('.student-checkbox').forEach(checkbox => {
      checkbox.checked = true;
    });
  }

  function deselectAllStudents() {
    document.querySelectorAll('.student-checkbox').forEach(checkbox => {
      checkbox.checked = false;
    });
  }
</script>
