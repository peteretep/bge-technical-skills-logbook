<div class="space-y-6">
  <!-- Breadcrumb Navigation -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <%= link_to root_path, class: "text-gray-700 hover:text-primary" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
          Dashboard
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          <span class="text-gray-500 font-medium"><%= @classroom.full_name %></span>
        </div>
      </li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
    <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @classroom.full_name %></h1>
    <p class="text-gray-600">
      <span class="font-medium"><%= @students.count %></span>
      <%= 'student'.pluralize(@students.count) %>
    </p>
  </div>

  <!-- Student Progress Table -->
  <% if @students.any? %>
    <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-2xl font-semibold text-gray-900">Student Progress Overview</h2>
        <p class="text-gray-600 mt-1">Track student achievement across all skill levels</p>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200" id="progress-table">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 transition-colors" onclick="sortTable(0)">
                Student Name
                <span class="ml-1">â†•</span>
              </th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 transition-colors" onclick="sortTable(1)">
                Working Level
                <span class="ml-1">â†•</span>
              </th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 transition-colors" onclick="sortTable(2)">
                ðŸ¥‰ Bronze
                <span class="ml-1">â†•</span>
              </th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 transition-colors" onclick="sortTable(3)">
                ðŸ¥ˆ Silver
                <span class="ml-1">â†•</span>
              </th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 transition-colors" onclick="sortTable(4)">
                ðŸ¥‡ Gold
                <span class="ml-1">â†•</span>
              </th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100 transition-colors" onclick="sortTable(5)">
                Total Skills
                <span class="ml-1">â†•</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @students.each do |student| %>
              <%
                total = student.total_skills_by_level
                demonstrated = student.demonstrated_skills_by_level
                percentages = student.skill_percentages
              %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to student.full_name, student_path(student),
                      class: "text-primary hover:text-primary/80 font-medium" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center" data-sort="<%= student.working_level %>">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold
                    <%= case student.working_level[0]
                        when '2' then 'bg-amber-100 text-amber-800'
                        when '3' then 'bg-gray-200 text-gray-800'
                        when '4' then 'bg-yellow-100 text-yellow-800'
                        end %>">
                    <%= student.working_level %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm" data-sort="<%= percentages[:bronze] %>">
                  <div class="font-medium text-gray-900">
                    <%= demonstrated[:bronze] %>/<%= total[:bronze] %>
                  </div>
                  <div class="text-xs <%= percentages[:bronze] >= 60 ? 'text-green-600 font-semibold' : percentages[:bronze] >= 30 ? 'text-yellow-600' : 'text-gray-500' %>">
                    <%= percentages[:bronze] %>%
                  </div>
                  <!-- Progress bar -->
                  <div class="w-full bg-gray-200 rounded-full h-1.5 mt-1">
                    <div class="bg-amber-600 h-1.5 rounded-full" style="width: <%= percentages[:bronze] %>%"></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm" data-sort="<%= percentages[:silver] %>">
                  <div class="font-medium text-gray-900">
                    <%= demonstrated[:silver] %>/<%= total[:silver] %>
                  </div>
                  <div class="text-xs <%= percentages[:silver] >= 60 ? 'text-green-600 font-semibold' : percentages[:silver] >= 30 ? 'text-yellow-600' : 'text-gray-500' %>">
                    <%= percentages[:silver] %>%
                  </div>
                  <!-- Progress bar -->
                  <div class="w-full bg-gray-200 rounded-full h-1.5 mt-1">
                    <div class="bg-gray-400 h-1.5 rounded-full" style="width: <%= percentages[:silver] %>%"></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm" data-sort="<%= percentages[:gold] %>">
                  <div class="font-medium text-gray-900">
                    <%= demonstrated[:gold] %>/<%= total[:gold] %>
                  </div>
                  <div class="text-xs <%= percentages[:gold] >= 60 ? 'text-green-600 font-semibold' : percentages[:gold] >= 30 ? 'text-yellow-600' : 'text-gray-500' %>">
                    <%= percentages[:gold] %>%
                  </div>
                  <!-- Progress bar -->
                  <div class="w-full bg-gray-200 rounded-full h-1.5 mt-1">
                    <div class="bg-yellow-500 h-1.5 rounded-full" style="width: <%= percentages[:gold] %>%"></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm" data-sort="<%= student.total_percentage %>">
                  <div class="font-bold text-gray-900">
                    <%= student.total_demonstrated_count %>/<%= student.total_skills_count %>
                  </div>
                  <div class="text-xs font-semibold <%= student.total_percentage >= 60 ? 'text-green-600' : student.total_percentage >= 30 ? 'text-yellow-600' : 'text-gray-500' %>">
                    <%= student.total_percentage %>%
                  </div>
                  <!-- Progress bar -->
                  <div class="w-full bg-gray-200 rounded-full h-1.5 mt-1">
                    <div class="<%= student.total_percentage >= 60 ? 'bg-green-600' : student.total_percentage >= 30 ? 'bg-yellow-500' : 'bg-gray-400' %> h-1.5 rounded-full" style="width: <%= student.total_percentage %>%"></div>
                  </div>
                </td>
                <td>
                  <%= button_to "Delete Student", 
                      classroom_student_path(@classroom, student), 
                      method: :delete, 
                      data: { turbo_confirm: "Are you sure you want to delete #{student.full_name}?" },
                      class: "text-red-600 hover:text-red-800 font-medium" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>


  <!-- Bulk Mark Skills -->
  <% if @students.any? %>
    <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 mb-6 flex justify-between items-center">
      <div>
        <h2 class="text-2xl font-semibold text-gray-900">Bulk Mark Skills</h2>
        <p class="text-gray-600 mt-1">Quickly mark skills as demonstrated for multiple students.</p>
      </div>
      <%= link_to bulk_mark_classroom_path(@classroom), 
          class: "bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-semibold transition-colors flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        Go to Bulk Mark Page
      <% end %>
    </div>
  <% end %>

  <!-- Add Student Form -->
  <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">Add New Student</h2>

    <%= form_with model: [@classroom, @student], local: true, class: "space-y-4" do |form| %>
      <% if @student.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside">
            <% @student.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :first_name, 
              required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
        </div>

        <div>
          <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :last_name, 
              required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
        </div>
      </div>

      <div>
        <%= form.submit "Add Student", 
            class: "bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-semibold transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function selectAllStudents() {
    document.querySelectorAll('.student-checkbox').forEach(checkbox => {
      checkbox.checked = true;
    });
  }

  function deselectAllStudents() {
    document.querySelectorAll('.student-checkbox').forEach(checkbox => {
      checkbox.checked = false;
    });
  }

  // Table sorting functionality
  let sortDirection = {};

  function sortTable(columnIndex) {
    const table = document.getElementById('progress-table');
    const tbody = table.querySelector('tbody');
    const rows = Array.from(tbody.querySelectorAll('tr'));

    // Initialize sort direction for this column if not set
    if (sortDirection[columnIndex] === undefined) {
      sortDirection[columnIndex] = 'asc';
    }

    // Toggle sort direction
    sortDirection[columnIndex] = sortDirection[columnIndex] === 'asc' ? 'desc' : 'asc';
    const isAscending = sortDirection[columnIndex] === 'asc';

    rows.sort((a, b) => {
      let aValue, bValue;

      if (columnIndex === 0) {
        // Sort by name (text content)
        aValue = a.cells[columnIndex].textContent.trim().toLowerCase();
        bValue = b.cells[columnIndex].textContent.trim().toLowerCase();
      } else {
        // Sort by data-sort attribute (numerical)
        aValue = parseFloat(a.cells[columnIndex].getAttribute('data-sort')) || 0;
        bValue = parseFloat(b.cells[columnIndex].getAttribute('data-sort')) || 0;

        // For working level, extract number and letter for proper sorting
        if (columnIndex === 1) {
          const aStr = a.cells[columnIndex].getAttribute('data-sort');
          const bStr = b.cells[columnIndex].getAttribute('data-sort');
          aValue = parseInt(aStr[0]) * 10 + (aStr[1] === 'X' ? 0 : aStr[1] === 'B' ? 1 : 2);
          bValue = parseInt(bStr[0]) * 10 + (bStr[1] === 'X' ? 0 : bStr[1] === 'B' ? 1 : 2);
        }
      }

      if (aValue < bValue) return isAscending ? -1 : 1;
      if (aValue > bValue) return isAscending ? 1 : -1;
      return 0;
    });

    // Re-append rows in sorted order
    rows.forEach(row => tbody.appendChild(row));

    // Update sort indicators
    const headers = table.querySelectorAll('th');
    headers.forEach((header, index) => {
      const indicator = header.querySelector('span');
      if (indicator) {
        if (index === columnIndex) {
          indicator.textContent = isAscending ? 'â†‘' : 'â†“';
        } else {
          indicator.textContent = 'â†•';
        }
      }
    });
  }
</script>
