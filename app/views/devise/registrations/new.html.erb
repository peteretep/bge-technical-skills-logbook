<div class="max-w-md mx-auto space-y-4">
  <!-- About Link Banner -->
  <div class="bg-blue-50 rounded-lg p-4 border border-blue-200 text-center">
    <%= link_to about_path, class: "inline-flex items-center justify-center text-blue-700 hover:text-blue-900 font-medium transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Learn about this system before signing up
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-8 border border-gray-200">
    <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :school, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :school, autocomplete: "school", 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autocomplete: "email", 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-1">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" %>
    </div>

    <div>
      <%= f.submit "Sign up",
          class: "w-full bg-primary hover:bg-primary/90 text-white px-4 py-3 rounded-lg font-semibold transition-colors cursor-pointer" %>
    </div>
  <% end %>


  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
